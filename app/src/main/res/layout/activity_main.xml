<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1200"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10sp"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="40dp"
        android:text="0"
        android:background="@color/white"
        android:gravity="bottom|end"
        android:layout_margin="10dp"></TextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:id="@+id/btnClear"
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="#FF0000"
            android:padding="25sp"
            android:text="C"
            android:textSize="16sp"></Button>

        <ImageButton
            android:id="@+id/btnCut"
            android:layout_row="4"
            android:layout_column="3"
            android:backgroundTint="@android:color/black"
            app:srcCompat= "@drawable/imagebutton"
            android:padding="25sp"
            android:text="C"
            android:textSize="16sp"></ImageButton>

        <Button
            android:id="@+id/btnPercentage"
            android:layout_row="4"
            android:layout_column="1"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:text="%"
            android:textSize="16sp"></Button>


        <Button
            android:id="@+id/btn1"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="1"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="2"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn3"
            android:layout_row="0"
            android:layout_column="2"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="3"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn4"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="4"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn5"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="5"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn6"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="6"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn7"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:text="7"
            android:layout_margin="1sp"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn8"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="8"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn9"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="9"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnMul"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="#0000bB"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="X"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnDiv"
            android:layout_row="2"
            android:layout_column="3"
            android:backgroundTint="#0000bB"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="/"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnSub"
            android:layout_row="3"
            android:layout_column="3"
            android:backgroundTint="#0000BB"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="-"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnAdd"
            android:layout_row="0"
            android:layout_column="3"
            android:backgroundTint="#0000bB"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="+"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn0"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:layout_margin="1sp"
            android:text="0"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnDec"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#ADD136"
            android:padding="25sp"
            android:text="."
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnParanthesis"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#Add000"
            android:padding="25sp"
            android:text="()"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btnequal"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#ADD000"
            android:padding="25sp"
            android:text="="
            android:textSize="16sp"></Button>


    </GridLayout>

</LinearLayout>